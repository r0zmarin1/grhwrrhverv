<Window x:Class="grhwrrh.View.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:grhwrrh"
        mc:Ignorable="d"
        Title="AddWindow" Height="450" Width="800" Background="RosyBrown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Grid.ColumnSpan="3" Content="Что хочете добавить?" FontSize="40"/>
        <Button Grid.Column="1" Grid.Row="1" Content="GPU" FontSize="20" Command="{Binding GpuAdd}" Background="BurlyWood"/>
        <Button Grid.Column="1" Grid.Row="2" Content="CPU" FontSize="20" Command="{Binding CpuAdd}" Background="MediumPurple" />
        <Button Grid.Column="2" Grid.Row="1" Content="RAM" FontSize="20" Command="{Binding RamAdd}" Background="LightPink"/>
        <Button Grid.Column="2" Grid.Row="2" Content="Motherboard" FontSize="20" Command="{Binding MomAdd}" Background="LightSteelBlue"/>

    </Grid>
</Window>
